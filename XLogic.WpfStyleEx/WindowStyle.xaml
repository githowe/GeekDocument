<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl">
    
    <Style x:Key="HighTitleWindow" TargetType="Window">
        <!-- 字号 -->
        <Setter Property="FontSize" Value="12"/>
        <!-- 前景色 -->
        <Setter Property="Foreground" Value="White"/>
        <!-- 背景色 -->
        <Setter Property="Background" Value="#D9323647"/>
        <!-- 文本显示模式：屏幕 -->
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <!-- 文本渲染模式：亚像素 -->
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <!-- WindowChrome -->
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome GlassFrameThickness="0,1,0,0" UseAeroCaptionButtons="False" ResizeBorderThickness="4" CaptionHeight="32" CornerRadius="0"/>
            </Setter.Value>
        </Setter>
        <!-- 模板 -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <!-- 窗口外边框 -->
                    <Border x:Name="WindowFrame">
                        <!-- 窗口内框架 -->
                        <Grid>
                            <!-- 分区 -->
                            <Grid.RowDefinitions>
                                <!-- 标题栏 -->
                                <RowDefinition Height="36"/>
                                <!-- 客户区 -->
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!-- 第一块：标题栏 -->
                            <Grid Grid.Row="0" Background="#282828" RenderOptions.EdgeMode="Aliased">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- 图标 -->
                                <Image x:Name="WindowIcon"/>
                                <!-- 中间区域 -->
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- 工具栏 -->
                                    <xc:ToolBar x:Name="TopToolBar" ToolWidth="36" ToolHeight="36" HorizontalAlignment="Left" WindowChrome.IsHitTestVisibleInChrome="True"/>
                                    <!-- 标签栏 -->
                                    <xc:TabBar x:Name="TopTabBar" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                </Grid>
                                <!-- 按钮 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2" WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Button x:Name="MenuButton" Width="36" Style="{StaticResource MenuButtonStyle}"/>
                                    <Button x:Name="MinButton" Width="36" Style="{StaticResource MinButtonStyle}"/>
                                    <Button x:Name="MaxButton" Width="36" Style="{StaticResource MaxButtonStyle}"/>
                                    <Button x:Name="CloseButton" Width="36" Style="{StaticResource CloseButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                            <!-- 第二块：客户区 -->
                            <Grid Grid.Row="1" Background="Black">
                                <AdornerDecorator>
                                    <ContentPresenter/>
                                </AdornerDecorator>
                            </Grid>
                        </Grid>
                    </Border>
                    <!-- 触发器 -->
                    <ControlTemplate.Triggers>
                        <!-- 窗口最大化时 -->
                        <Trigger Property="WindowState" Value="Maximized">
                            <!-- 绑定内边距 -->
                            <Setter TargetName="WindowFrame" Property="Padding" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=WindowBorderWdith}"/>
                            <!-- 修改最大化按钮样式 -->
                            <Setter TargetName="MaxButton" Property="Style" Value="{StaticResource MidButtonStyle}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>