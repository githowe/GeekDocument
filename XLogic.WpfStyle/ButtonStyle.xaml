    <!-- 工具栏按钮 -->
    <Style x:Key="ToolBarButton" TargetType="Button">
        <Setter Property="Foreground" Value="#7B94B8"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid x:Name="Back" Background="#323232" Visibility="Hidden"/>
                        <Border x:Name="Border" Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 鼠标悬停时的状态 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <!--<Setter TargetName="Back" Property="Visibility" Value="Visible"/>-->
                            <Setter TargetName="Border" Property="Background" Value="#19FFFFFF"/>
                        </Trigger>
                        <!-- 鼠标按下时的状态 -->
                        <Trigger Property="IsPressed" Value="true">
                            <!--<Setter TargetName="Back" Property="Visibility" Value="Visible"/>-->
                            <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                        </Trigger>
                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Opacity" Value="0.2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

