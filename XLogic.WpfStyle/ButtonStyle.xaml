                            <Setter TargetName="Inner" Property="Background" Value="#4f1a1a"/>
                            <Setter TargetName="Inner" Property="BorderBrush" Value="#ff5454"/>
                        </Trigger>
                        <!-- 鼠标按下时的状态 -->
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Inner" Property="Background" Value="#ff5454"/>
                            <Setter TargetName="Inner" Property="BorderBrush" Value="#ff5454"/>
