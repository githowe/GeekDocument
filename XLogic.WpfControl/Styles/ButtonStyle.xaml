<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 树项箭头 -->
    <Style x:Key="TreeItemArrow" TargetType="ToggleButton">
        <!-- 禁用获取焦点 -->
        <Setter Property="Focusable" Value="False"/>
        <!-- 鼠标按下时即触发单击事件 -->
        <Setter Property="ClickMode" Value="Press"/>
        <!-- 垂直居中 -->
        <Setter Property="VerticalAlignment" Value="Center"/>
        <!-- 模板 -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <!-- 外观 -->
                    <Grid Background="Transparent" Width="23" Height="23">
                        <Image Width="15" x:Name="Icon" Source="Image/Furl.png"/>
                    </Grid>
                    <!-- 触发器 -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Icon" Property="Source" Value="Image/Expand.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>