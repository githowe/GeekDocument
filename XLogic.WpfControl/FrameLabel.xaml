<UserControl x:Class="XLogic.WpfControl.FrameLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XLogic.WpfControl"
             mc:Ignorable="d" x:Name="ControlMain"
             d:DesignHeight="19" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border x:Name="Border_Left" BorderThickness="1,1,0,0" BorderBrush="White" Grid.Column="0" UseLayoutRounding="True" VerticalAlignment="Top" Margin="0,0,5,0"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Grid x:Name="IconBox" Width="15" Height="15" Margin="0,0,5,0" Visibility="Collapsed">
                <Image x:Name="Image_Icon" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <TextBlock x:Name="TheText" Padding="0" Text="标签" Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>
        <Border x:Name="Border_Right" BorderThickness="0,1,1,0" BorderBrush="White" Grid.Column="2" UseLayoutRounding="True" VerticalAlignment="Top" Margin="4,0,0,0"/>
    </Grid>
</UserControl>