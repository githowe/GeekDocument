<UserControl x:Class="XLogic.WpfControl.TabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XLogic.WpfControl"
             mc:Ignorable="d" Height="36">
    <UserControl.Resources>
        <!-- 关闭按钮 -->
        <Style x:Key="CloseItemButton" TargetType="Button">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="Transparent">
                            <Image x:Name="Icon" Width="16" Height="16" Source="Image/Close_Item.png" Opacity="0.25"/>
                        </Border>
                        <!-- 触发器 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Icon" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Icon" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- 第一行：背景 -->
        <Grid x:Name="Grid_Back" Background="Transparent" Grid.RowSpan="2"/>
        <!-- 第二行：点击区域 -->
        <Grid x:Name="MainGrid" Background="Transparent" MinWidth="160" Height="32" Grid.Row="1" WindowChrome.IsHitTestVisibleInChrome="True" ClipToBounds="True"
              MouseEnter="MainGrid_MouseEnter" MouseLeave="MainGrid_MouseLeave" MouseLeftButtonDown="MainGrid_MouseLeftButtonDown">
            <!-- 分两列 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <!-- 文本 -->
            <TextBlock x:Name="Block_Title" Text="标签标题" Foreground="#60FFFFFF" FontSize="13" VerticalAlignment="Bottom" Margin="12,0,-1,10"/>
            <Button x:Name="Button_Close" Style="{StaticResource CloseItemButton}" Height="36" Margin="0,-4,0,0" Grid.Column="1" Visibility="Hidden" Click="Button_Close_Click"/>
        </Grid>
    </Grid>
</UserControl>