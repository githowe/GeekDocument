<xww:XDialog x:Class="GeekDocument.SubSystem.WindowSystem.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeekDocument.SubSystem.WindowSystem"
        xmlns:xww="clr-namespace:XLogic.Wpf.Window;assembly=XLogic.Wpf"
        mc:Ignorable="d" FontFamily="../../Assets/Font/#新宋体"
        WindowStartupLocation="CenterOwner" CustomIcon="Loading"
        Style="{StaticResource NormalDialog}" ShowInTaskbar="False"
        Title="正在加载..." Width="520" SizeToContent="Height">
    <Grid>
        <Grid Background="Black" Height="4" Width="500" Margin="10">
            <!-- 进度 -->
            <Grid x:Name="Grid_Progress" Width="0" HorizontalAlignment="Left">
                <!-- 进度背景 -->
                <Grid Width="500" Background="#fed267"/>
            </Grid>
        </Grid>
    </Grid>
</xww:XDialog>