<UserControl x:Class="GeekDocument.SubSystem.DocumentSystem.RecentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GeekDocument.SubSystem.DocumentSystem"
             mc:Ignorable="d" FontSize="13" Loaded="UserControl_Loaded"
             d:DesignHeight="60" d:DesignWidth="920">
    <Grid x:Name="MainGrid" MinWidth="400" MaxWidth="1600" Background="Transparent" Cursor="Hand"
          MouseEnter="MainGrid_MouseEnter" MouseLeave="MainGrid_MouseLeave"
          MouseDown="MainGrid_MouseDown" MouseMove="MainGrid_MouseMove" MouseUp="MainGrid_MouseUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="144"/>
        </Grid.ColumnDefinitions>
        <!-- 项目名称与路径 -->
        <Grid Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="22"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="Block_Name" Foreground="White" Text="文档名称" VerticalAlignment="Center" Margin="0,1,0,0" Grid.Column="1"/>
            <TextBlock x:Name="Block_Path" Foreground="White" Text="文档路径" VerticalAlignment="Center" Margin="0,1,0,0" Opacity="0.25" TextTrimming="WordEllipsis" Grid.Column="3"/>
        </Grid>
        <!-- 日期 -->
        <Grid Height="60" Grid.Column="1">
            <TextBlock x:Name="Block_Time" Foreground="White" Text="编辑日期" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="24,1,0,0" Opacity="0.4"/>
        </Grid>
        <!-- 操作 -->
        <StackPanel Orientation="Horizontal" Height="60" Grid.Column="2">
            <!-- 标记 -->
            <Button x:Name="Tool_Mark" Style="{StaticResource NoBorderButton}" ToolTip="标记" Width="24" Height="24" Margin="24,0,0,0" Click="Tool_Mark_Click">
                <Button.Content>
                    <Image Source="Image/Mark.png" Height="16" Width="16"/>
                </Button.Content>
            </Button>
            <!-- 已标记 -->
            <Grid x:Name="Grid_Mark" Width="24" Height="24" Background="Transparent" Margin="-24,0,0,0" Visibility="Hidden" IsHitTestVisible="False">
                <Image Source="Image/Marked.png" Width="16"/>
            </Grid>
            <!-- 打开文件夹 -->
            <Button x:Name="Tool_Folder" Style="{StaticResource NoBorderButton}" ToolTip="打开文件夹" Width="24" Height="24" Margin="12,0,0,0" Click="Tool_Folder_Click">
                <Button.Content>
                    <Image Source="Image/Folder.png" Height="16" Width="16"/>
                </Button.Content>
            </Button>
            <!-- 移除 -->
            <Button x:Name="Tool_Remove" Style="{StaticResource NoBorderButton}" ToolTip="移除" Width="24" Height="24" Margin="12,0,0,0" Click="Tool_Remove_Click">
                <Button.Content>
                    <Image Source="Image/Delete.png" Height="16" Width="16"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>