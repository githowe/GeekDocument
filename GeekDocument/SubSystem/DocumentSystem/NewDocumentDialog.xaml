<xw:XDialog x:Class="GeekDocument.SubSystem.DocumentSystem.NewDocumentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeekDocument.SubSystem.DocumentSystem"
        xmlns:xw="clr-namespace:XLogic.Wpf.Window;assembly=XLogic.Wpf"
        xmlns:wc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Style="{StaticResource NormalDialog}" ShowInTaskbar="False"
        FontFamily="../../Assets/Font/#新宋体" CustomIcon="WindowIcon/NewFile"
        Title="新建文档" SizeToContent="Height" Width="500">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="21"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="10"/>

                <RowDefinition Height="21"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="10"/>

                <RowDefinition Height="1"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <wc:FrameLabel Text="名称"/>
            <TextBox x:Name="Input_Name" Grid.Row="2"/>

            <wc:FrameLabel Text="路径" Grid.Row="4"/>
            <Grid Grid.Row="6">
                <TextBox x:Name="Input_Path" Width="478"/>
                <Grid Background="Transparent" Width="37" Height="23" HorizontalAlignment="Right" Margin="0,0,1,0">
                    <Button x:Name="Tool_Explorer" Style="{StaticResource ToolBarButton}" Click="Tool_Explorer_Click" ToolTip="浏览">
                        <Button.Content>
                            <Image Source="../../Assets/Icon15/SelectPath2.png" Width="15" Height="15"/>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Row="8" Background="#20FFFFFF"/>
            <Button x:Name="OK" Grid.Row="10" Style="{StaticResource ConfirmButton}" IsDefault="True" Content="确定" Click="OK_Click"/>
        </Grid>
    </Grid>
</xw:XDialog>