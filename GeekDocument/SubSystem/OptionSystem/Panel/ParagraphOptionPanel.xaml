<UserControl x:Class="GeekDocument.SubSystem.OptionSystem.Panel.ParagraphOptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GeekDocument.SubSystem.OptionSystem.Panel"
             xmlns:wc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl"
             mc:Ignorable="d" d:FontFamily="NSimSun"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Grid Margin="10">
            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                <wc:FrameLabel Text="首行缩进" Width="100"/>
                <wc:FrameLabel Text="段间距" Width="100" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,35,0,0">
                <TextBox x:Name="Input_FirstLineIndent" Width="100"/>
                <TextBox x:Name="Input_ParagraphInterval" Width="100" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>