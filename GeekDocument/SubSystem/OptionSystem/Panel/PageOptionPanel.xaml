<UserControl x:Class="GeekDocument.SubSystem.OptionSystem.Panel.PageOptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GeekDocument.SubSystem.OptionSystem.Panel"
             xmlns:wc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl"
             mc:Ignorable="d" d:FontFamily="NSimSun"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Grid Margin="10">
            <wc:FrameLabel Text="页面宽度" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="Input_PageWidth" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,35,0,0"/>

            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,70,0,0">
                <wc:FrameLabel Text="上边距" Width="100"/>
                <wc:FrameLabel Text="下边距" Width="100" Margin="10,0,0,0"/>
                <wc:FrameLabel Text="左边距" Width="100" Margin="10,0,0,0"/>
                <wc:FrameLabel Text="右边距" Width="100" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,105,0,0">
                <TextBox x:Name="Input_Padding_Top" Width="100"/>
                <TextBox x:Name="Input_Padding_Bottom" Width="100" Margin="10,0,0,0"/>
                <TextBox x:Name="Input_Padding_Left" Width="100" Margin="10,0,0,0"/>
                <TextBox x:Name="Input_Padding_Right" Width="100" Margin="10,0,0,0"/>
                <ToggleButton x:Name="Toggle_Link" Style="{StaticResource ToggleNoBorder}" Width="25" Height="25" Margin="10,0,0,0" IsChecked="True" ToolTip="同时调整所有边距" Click="Toggle_Link_Click">
                    <Image Source="Link.png" Width="15" Height="15"/>
                </ToggleButton>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>