<UserControl x:Class="GeekDocument.SubSystem.OptionSystem.Panel.UIThemePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeekDocument.SubSystem.OptionSystem.Panel"
             xmlns:wc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl"
             mc:Ignorable="d" d:FontFamily="NSimSun"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Grid Margin="10">
            <StackPanel Orientation="Horizontal" Height="25" Background="Black">
                <Grid Width="2"/>
                <RadioButton x:Name="Radio_Dark" Content="深色" Width="100" Height="21" IsChecked="True"/>
                <Grid Width="2"/>
                <RadioButton x:Name="Radio_Light" Content="浅色" Width="100" Height="21"/>
                <Grid Width="2"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>