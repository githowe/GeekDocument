<UserControl x:Class="GeekDocument.SubSystem.OptionSystem.Panel.LibOptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeekDocument.SubSystem.OptionSystem.Panel"
             xmlns:wc="clr-namespace:XLogic.WpfControl;assembly=XLogic.WpfControl"
             mc:Ignorable="d" d:FontFamily="NSimSun"
             d:DesignWidth="600" VerticalAlignment="Top">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <!-- 表格 -->
            <Grid Background="#141414">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29"/>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- 表头 -->
                <Grid Height="25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="2"/>
                    </Grid.ColumnDefinitions>
                    <Grid Background="#282828" Grid.Column="1">
                        <TextBlock Text="库名" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="7,0,0,0"/>
                    </Grid>
                    <Grid Background="#282828" Grid.Column="3">
                        <TextBlock Text="库路径" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="7,0,0,0"/>
                    </Grid>
                </Grid>
                <!-- 表项 -->
                <StackPanel Orientation="Vertical" Grid.Row="1" Height="162">
                    <local:LibItem/>
                    <local:LibItem Margin="0,2,0,0" IsDefault="True"/>
                    <local:LibItem Margin="0,2,0,0"/>
                    <local:LibItem Margin="0,2,0,0"/>
                    <local:LibItem Margin="0,2,0,0"/>
                    <local:LibItem Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" Height="25" Grid.Row="2" HorizontalAlignment="Left">
                <Button x:Name="Button_Add" Style="{StaticResource ConfirmButton}" Content="添加库" Width="120"/>
                <Button x:Name="Button_Remove" Style="{StaticResource NormalButton}" Content="删除库" Width="120" Margin="10,0,0,0"/>
                <Button x:Name="Button_SetDefault" Style="{StaticResource NormalButton}" Content="设为默认" Width="120" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>